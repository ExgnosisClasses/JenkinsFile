pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Build'
            }
        }
    stage('Test') {
            steps {
                echo 'Test'
             
                
            }
        }
    stage('Package') {
            steps {
                echo 'Package'
            }
        }
    stage('Deploy') {
            steps {
                echo 'Deploy'
            }
        }
    stage('Report') {
            steps {
                echo 'Report'
            }
        }
    }
    post {
        always {
            echo '++++++++ Always Post build step'
        }
        success {
            echo 'SUCCESS!!!'
        }
        failure {
            echo '***** Failure occured'
        }
        fixed {
            echo '----- Problem Fixed'
        }
        cleanup {
            echo 'Bye from Cleanup'
        }
    }
    
}

